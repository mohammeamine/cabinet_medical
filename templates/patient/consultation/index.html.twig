{% extends 'base.html.twig' %}

{% block title %}Mes Consultations | MediCare+{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Mes Consultations</h1>
        <p class="text-gray-600">Historique de toutes vos consultations</p>
    </div>

    <div class="space-y-6">
        {% for consultation in consultations %}
        <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
            <div class="flex justify-between items-start mb-4">
                <div>
                    <h3 class="text-lg font-semibold text-gray-900">Consultation du {{ consultation.date|date('d/m/Y') }}</h3>
                    <p class="text-sm text-gray-500">Médecin : {{ consultation.medecin.prenom }} {{ consultation.medecin.nom }}</p>
                </div>
            </div>

            {% if consultation.note %}
            <div class="mb-4">
                <h4 class="text-sm font-medium text-gray-700 mb-2">Notes médicales</h4>
                <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
                    <p class="text-gray-900 whitespace-pre-wrap">{{ consultation.note }}</p>
                </div>
            </div>
            {% endif %}

            {% if consultation.ordonnance %}
            <div>
                <h4 class="text-sm font-medium text-gray-700 mb-2">Ordonnance</h4>
                <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
                    <p class="text-gray-900 whitespace-pre-wrap">{{ consultation.ordonnance }}</p>
                </div>
            </div>
            {% endif %}
        </div>
        {% else %}
        <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6 text-center">
            <p class="text-gray-500">Aucune consultation trouvée</p>
        </div>
        {% endfor %}
    </div>

    <div class="mt-6">
        <a href="{{ path('app_patient_dashboard') }}" class="text-blue-600 hover:text-blue-800 font-medium">
            ← Retour au tableau de bord
        </a>
    </div>
</div>
{% endblock %}

