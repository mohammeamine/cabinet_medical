{% extends 'base.html.twig' %}

{% block title %}Mon Tableau de Bord | MediCare+{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Mon Tableau de Bord</h1>
        <p class="text-gray-600">Bienvenue, {{ patient.prenom }} {{ patient.nom }}</p>
    </div>

    <!-- Informations du médecin -->
    {% if medecin %}
    <div class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm mb-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Votre Médecin</h2>
        <div class="flex items-center">
            <div class="bg-blue-100 p-4 rounded-full mr-4">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
            </div>
            <div>
                <p class="font-semibold text-gray-900">{{ medecin.prenom }} {{ medecin.nom }}</p>
                <p class="text-sm text-gray-500">{{ medecin.email }}</p>
                <p class="text-sm text-gray-500">{{ medecin.tele }}</p>
            </div>
        </div>
    </div>
    {% endif %}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Rendez-vous à venir -->
        <div class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-bold text-gray-900">Rendez-vous à venir</h2>
                <a href="{{ path('app_patient_rendez_vous_index') }}" class="text-blue-600 hover:text-blue-800 text-sm font-medium">Voir tout →</a>
            </div>
            {% if rendezVousAvenir|length > 0 %}
                <div class="space-y-3">
                    {% for rdv in rendezVousAvenir %}
                    <div class="border border-gray-200 rounded-lg p-4">
                        <div class="flex justify-between items-start">
                            <div>
                                <p class="font-semibold text-gray-900">{{ rdv.date|date('d/m/Y') }}</p>
                                <p class="text-sm text-gray-600">{{ rdv.heure|date('H:i') }}</p>
                            </div>
                            {% if rdv.statut == 'scheduled' %}
                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">Programmé</span>
                            {% elseif rdv.statut == 'completed' %}
                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Terminé</span>
                            {% endif %}
                        </div>
                    </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-gray-500 text-sm">Aucun rendez-vous à venir</p>
            {% endif %}
        </div>

        <!-- Consultations récentes -->
        <div class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-bold text-gray-900">Consultations récentes</h2>
                <a href="{{ path('app_patient_consultation_index') }}" class="text-blue-600 hover:text-blue-800 text-sm font-medium">Voir tout →</a>
            </div>
            {% if consultationsRecentes|length > 0 %}
                <div class="space-y-3">
                    {% for consultation in consultationsRecentes %}
                    <div class="border border-gray-200 rounded-lg p-4">
                        <p class="font-semibold text-gray-900">{{ consultation.date|date('d/m/Y') }}</p>
                        {% if consultation.note %}
                            <p class="text-sm text-gray-600 mt-1 line-clamp-2">{{ consultation.note|slice(0, 100) }}{% if consultation.note|length > 100 %}...{% endif %}</p>
                        {% else %}
                            <p class="text-sm text-gray-500 mt-1">Aucune note</p>
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-gray-500 text-sm">Aucune consultation récente</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

