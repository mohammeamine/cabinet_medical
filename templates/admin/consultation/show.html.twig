{% extends 'base.html.twig' %}

{% block title %}Détails Consultation | MediCare+{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8 max-w-4xl">
    <div class="mb-8 flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Détails de la Consultation</h1>
            <p class="text-gray-600">Informations complètes</p>
        </div>
        <div class="flex gap-4">
            <a href="{{ path('app_admin_consultation_edit', {id: consultation.id}) }}" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-md font-semibold transition">
                Modifier
            </a>
            <a href="{{ path('app_admin_consultation_index') }}" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-6 py-3 rounded-md font-semibold transition">
                Retour à la liste
            </a>
        </div>
    </div>

    <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6 space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Patient</label>
                <p class="text-lg text-gray-900">{{ consultation.patient.prenom }} {{ consultation.patient.nom }}</p>
                <p class="text-sm text-gray-500">{{ consultation.patient.email }}</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Médecin</label>
                <p class="text-lg text-gray-900">{{ consultation.medecin.prenom }} {{ consultation.medecin.nom }}</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Date</label>
                <p class="text-lg text-gray-900">{{ consultation.date|date('d/m/Y') }}</p>
            </div>
        </div>

        {% if consultation.note %}
        <div>
            <label class="block text-sm font-medium text-gray-500 mb-2">Notes médicales</label>
            <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
                <p class="text-gray-900 whitespace-pre-wrap">{{ consultation.note }}</p>
            </div>
        </div>
        {% endif %}

        {% if consultation.ordonnance %}
        <div>
            <label class="block text-sm font-medium text-gray-500 mb-2">Ordonnance</label>
            <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
                <p class="text-gray-900 whitespace-pre-wrap">{{ consultation.ordonnance }}</p>
            </div>
        </div>
        {% endif %}
    </div>

    <div class="mt-6">
        <a href="{{ path('app_admin_consultation_delete', {id: consultation.id}) }}" class="text-red-600 hover:text-red-800 font-medium">
            Supprimer cette consultation →
        </a>
    </div>
</div>
{% endblock %}

