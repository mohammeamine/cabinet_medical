{% extends 'base.html.twig' %}

{% block title %}Modifier Consultation | MediCare+{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Modifier Consultation</h1>
        <p class="text-gray-600">Modifier les informations de la consultation</p>
    </div>

    {{ form_start(form, {'attr': {'class': 'bg-white p-6 rounded-lg border border-gray-200 shadow-sm'}}) }}
        <div class="space-y-6">
            <div>
                {{ form_label(form.patient, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                {{ form_widget(form.patient) }}
                {{ form_errors(form.patient) }}
            </div>

            <div>
                {{ form_label(form.date, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                {{ form_widget(form.date) }}
                {{ form_errors(form.date) }}
            </div>

            <div>
                {{ form_label(form.note, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                {{ form_widget(form.note) }}
                {{ form_errors(form.note) }}
            </div>

            <div>
                {{ form_label(form.ordonnance, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                {{ form_widget(form.ordonnance) }}
                {{ form_errors(form.ordonnance) }}
            </div>
        </div>

        <div class="mt-8 flex gap-4">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-md font-semibold transition">
                Enregistrer les modifications
            </button>
            <a href="{{ path('app_admin_consultation_index') }}" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-6 py-3 rounded-md font-semibold transition">
                Annuler
            </a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}

