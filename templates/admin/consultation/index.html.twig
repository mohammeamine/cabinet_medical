{% extends 'base.html.twig' %}

{% block title %}Gestion des Consultations | MediCare+{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Gestion des Consultations</h1>
            <p class="text-gray-600">Liste de toutes les consultations</p>
        </div>
        <a href="{{ path('app_admin_consultation_new') }}" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-md font-semibold transition">
            + Nouvelle Consultation
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}

    <div class="bg-white rounded-lg border border-gray-200 shadow-sm overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Patient</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Médecin</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for consultation in consultations %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900">{{ consultation.patient.prenom }} {{ consultation.patient.nom }}</div>
                        <div class="text-sm text-gray-500">{{ consultation.patient.email }}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900">{{ consultation.date|date('d/m/Y') }}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900">{{ consultation.medecin.prenom }} {{ consultation.medecin.nom }}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="{{ path('app_admin_consultation_show', {id: consultation.id}) }}" class="text-blue-600 hover:text-blue-900 mr-4">Voir</a>
                        <a href="{{ path('app_admin_consultation_edit', {id: consultation.id}) }}" class="text-green-600 hover:text-green-900 mr-4">Modifier</a>
                        <a href="{{ path('app_admin_consultation_delete', {id: consultation.id}) }}" class="text-red-600 hover:text-red-900">Supprimer</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="4" class="px-6 py-4 text-center text-gray-500">Aucune consultation trouvée</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

