{% extends 'base.html.twig' %}

{% block title %}Gestion des Rendez-vous | MediCare+{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Gestion des Rendez-vous</h1>
            <p class="text-gray-600">Liste de tous les rendez-vous</p>
        </div>
        <a href="{{ path('app_admin_rendez_vous_new') }}" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-md font-semibold transition">
            + Nouveau Rendez-vous
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}

    <div class="bg-white rounded-lg border border-gray-200 shadow-sm overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Patient</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Heure</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for rendez_vous in rendez_vous %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900">{{ rendez_vous.patient.prenom }} {{ rendez_vous.patient.nom }}</div>
                        <div class="text-sm text-gray-500">{{ rendez_vous.patient.email }}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900">{{ rendez_vous.date|date('d/m/Y') }}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900">{{ rendez_vous.heure|date('H:i') }}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {% if rendez_vous.statut == 'scheduled' %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">Programmé</span>
                        {% elseif rendez_vous.statut == 'completed' %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Terminé</span>
                        {% elseif rendez_vous.statut == 'cancelled' %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Annulé</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="{{ path('app_admin_rendez_vous_show', {id: rendez_vous.id}) }}" class="text-blue-600 hover:text-blue-900 mr-4">Voir</a>
                        <a href="{{ path('app_admin_rendez_vous_edit', {id: rendez_vous.id}) }}" class="text-green-600 hover:text-green-900 mr-4">Modifier</a>
                        <a href="{{ path('app_admin_rendez_vous_delete', {id: rendez_vous.id}) }}" class="text-red-600 hover:text-red-900">Supprimer</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5" class="px-6 py-4 text-center text-gray-500">Aucun rendez-vous trouvé</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

