{% extends 'base.html.twig' %}

{% block title %}Nouveau Rendez-vous | MediCare+{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Nouveau Rendez-vous</h1>
        <p class="text-gray-600">Créer un nouveau rendez-vous</p>
    </div>

    {{ form_start(form, {'attr': {'class': 'bg-white p-6 rounded-lg border border-gray-200 shadow-sm'}}) }}
        <div class="space-y-6">
            <div>
                {{ form_label(form.patient, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                {{ form_widget(form.patient) }}
                {{ form_errors(form.patient) }}
            </div>

            <div>
                {{ form_label(form.date, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                {{ form_widget(form.date) }}
                {{ form_errors(form.date) }}
            </div>

            <div>
                {{ form_label(form.heure, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                {{ form_widget(form.heure) }}
                {{ form_errors(form.heure) }}
            </div>
        </div>

        <div class="mt-4 p-4 bg-blue-50 border border-blue-200 rounded-lg">
            <p class="text-sm text-blue-800">
                <strong>Note :</strong> Le statut sera automatiquement défini sur "Programmé" lors de la création. Vous pourrez le modifier plus tard depuis la liste des rendez-vous.
            </p>
        </div>

        <div class="mt-8 flex gap-4">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-md font-semibold transition">
                Créer le rendez-vous
            </button>
            <a href="{{ path('app_admin_rendez_vous_index') }}" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-6 py-3 rounded-md font-semibold transition">
                Annuler
            </a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}

