{% extends 'base.html.twig' %}

{% block title %}Supprimer Patient | MediCare+{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Supprimer Patient</h1>
        <p class="text-gray-600">Confirmer la suppression</p>
    </div>

    <div class="bg-white rounded-lg border border-red-200 shadow-sm p-6">
        <div class="mb-6">
            <p class="text-gray-700 mb-4">Êtes-vous sûr de vouloir supprimer le patient suivant ?</p>
            <div class="bg-gray-50 p-4 rounded-lg">
                <p class="font-semibold text-gray-900">{{ patient.prenom }} {{ patient.nom }}</p>
                <p class="text-sm text-gray-600">{{ patient.email }}</p>
            </div>
        </div>

        <form method="post" class="flex gap-4">
            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-md font-semibold transition">
                Oui, supprimer
            </button>
            <a href="{{ path('app_admin_patient_index') }}" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-6 py-3 rounded-md font-semibold transition">
                Annuler
            </a>
        </form>
    </div>
</div>
{% endblock %}

